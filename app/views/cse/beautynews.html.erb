<form method="GET" name="search" actino="cse/beautynews" >
		Keyword:<input type="text" name="q" id="keyword" value="<%= @keyword %>" autocomplete = "off" />
		<input type="submit" />
</form>

<div id="all">
  <div class="main a">
    <h4>『<strong><%= @keyword %></strong>』搜尋結果 </h4>
    <div class="discuss a">
	<h5> 相關搜尋:<%= @related_eywords.to_s.html_safe %></h5>
    <div class="disall a">
      <%= render  'menu'   %>
      <div id="dismain">
        <h4> 『<strong><%= @keyword %></strong>』在討論區搜尋結果(共<%= @total %>筆)</h4>
         	<div class="dismainnav">
            	<p><%= render  'sort_menu'   %></p>
        	</div> 
 		<div id='show'>
 			<%= render  'beautynews' %>
 		</div>
  		<div id="apear">
  			<% if @total.to_i > 0 %>
        		<p>
        			<div id='paginate'  >
        				<%= paginate @html, :remote => true , :window => 0  %>
        			</div>
        		</p>
        	<% else %>
        		<p>目前沒有資料</p>
        	<% end %>
      	</div>
				</div>
			</div>
		</div>
	</div> 
</div>